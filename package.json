{
    "name": "react-boilerplate",
    "version": "1.0.0",
    "description": "Simple react boilerplate",
    "scripts": {
        "start": "$(npm bin)/webpack-dev-server",
        "clean": "rm -rf ./dist",
        "prebuild": "npm run clean",
        "build": "NODE_ENV=production $(npm bin)/webpack --colors"
    },
    "keywords": [],
    "author": "Gilad Novik <gilad@novik.ca>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/giladno/react-boilerplate.git"
    },
    "bugs": {
        "url": "https://github.com/giladno/react-boilerplate/issues"
    },
    "homepage": "https://github.com/giladno/react-boilerplate#readme",
    "dependencies": {
        "normalize.css": "^8.0.0",
        "react": "^16.4.0",
        "react-dom": "^16.4.0",
        "react-router-dom": "^4.3.1"
    },
    "devDependencies": {
        "babel-core": "^6.26.3",
        "babel-eslint": "^8.2.3",
        "babel-loader": "^7.1.4",
        "babel-plugin-transform-class-properties": "^6.24.1",
        "babel-plugin-transform-decorators-legacy": "^1.3.5",
        "babel-plugin-transform-object-rest-spread": "^6.26.0",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.7.0",
        "babel-preset-react": "^6.24.1",
        "css-loader": "^0.28.11",
        "dotenv-webpack": "^1.5.7",
        "eslint": "^4.19.1",
        "eslint-loader": "^2.0.0",
        "eslint-plugin-react": "^7.9.1",
        "file-loader": "^1.1.11",
        "html-webpack-plugin": "^3.2.0",
        "html-webpack-template": "^6.2.0",
        "less": "^3.0.4",
        "less-loader": "^4.1.0",
        "mini-css-extract-plugin": "^0.4.0",
        "node-sass": "^4.9.0",
        "sass-loader": "^7.0.3",
        "uglifyjs-webpack-plugin": "^1.2.5",
        "webpack": "^4.12.0",
        "webpack-cli": "^3.0.3",
        "webpack-dev-server": "^3.1.4"
    },
    "babel": {
        "presets": [
            [
                "env",
                {
                    "modules": false,
                    "targets": {
                        "chrome": "60"
                    }
                }
            ],
            "react"
        ],
        "plugins": [
            "transform-decorators-legacy",
            "transform-class-properties",
            "transform-object-rest-spread"
        ]
    },
    "eslintConfig": {
        "globals": {
            "__DEV__": true,
            "React": true
        },
        "rules": {
            "no-console": 0,
            "strict": 0,
            "no-unused-vars": 1,
            "comma-dangle": [
                1,
                "always-multiline"
            ],
            "quotes": [
                1,
                "single"
            ],
            "linebreak-style": [
                2,
                "unix"
            ],
            "semi": [
                1,
                "always"
            ],
            "no-empty": [
                1,
                {
                    "allowEmptyCatch": true
                }
            ],
            "max-len": [
                1,
                120,
                4,
                {
                    "ignoreUrls": true,
                    "ignorePattern": "/(.*)/;",
                    "ignoreRegExpLiterals": true
                }
            ],
            "react/prop-types": 0,
            "react/display-name": 0,
            "react/jsx-no-bind": 1,
            "react/no-render-return-value": 0
        },
        "env": {
            "amd": true,
            "es6": true,
            "commonjs": true,
            "browser": true
        },
        "extends": [
            "eslint:recommended",
            "plugin:react/recommended"
        ],
        "parserOptions": {
            "ecmaFeatures": {
                "jsx": true
            }
        },
        "plugins": [
            "react"
        ],
        "parser": "babel-eslint"
    }
}
