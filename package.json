{
    "name": "react-boilerplate",
    "version": "1.0.0",
    "description": "Simple react boilerplate",
    "scripts": {
        "start": "$(npm bin)/webpack-dev-server",
        "clean": "rm -rf ./dist",
        "prebuild": "npm run clean",
        "build": "NODE_ENV=production $(npm bin)/webpack --colors"
    },
    "keywords": [],
    "author": "Gilad Novik <gilad@novik.ca>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/giladno/react-boilerplate.git"
    },
    "bugs": {
        "url": "https://github.com/giladno/react-boilerplate/issues"
    },
    "homepage": "https://github.com/giladno/react-boilerplate#readme",
    "dependencies": {
        "lodash": "^4.17.10",
        "normalize.css": "^8.0.0",
        "react": "^16.4.2",
        "react-dom": "^16.4.2",
        "react-router-dom": "^4.3.1"
    },
    "devDependencies": {
        "@babel/core": "^7.0.0",
        "@babel/plugin-proposal-class-properties": "^7.0.0",
        "@babel/plugin-proposal-decorators": "^7.0.0",
        "@babel/plugin-proposal-object-rest-spread": "^7.0.0",
        "@babel/polyfill": "^7.0.0",
        "@babel/preset-env": "^7.0.0",
        "@babel/preset-react": "^7.0.0",
        "babel-eslint": "^9.0.0",
        "babel-loader": "^8.0.0",
        "babel-plugin-lodash": "^3.3.4",
        "css-loader": "^1.0.0",
        "dotenv-webpack": "^1.5.7",
        "eslint": "^5.4.0",
        "eslint-loader": "^2.1.0",
        "eslint-plugin-node": "^7.0.1",
        "eslint-plugin-react": "^7.11.1",
        "file-loader": "^2.0.0",
        "html-webpack-plugin": "^3.2.0",
        "html-webpack-template": "^6.2.0",
        "less": "^3.8.1",
        "less-loader": "^4.1.0",
        "mini-css-extract-plugin": "^0.4.2",
        "node-sass": "^4.9.3",
        "sass-loader": "^7.1.0",
        "styled-jsx": "^3.0.2",
        "uglifyjs-webpack-plugin": "^1.3.0",
        "webpack": "^4.17.1",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.6"
    },
    "babel": {
        "presets": [
            [
                "@babel/preset-env",
                {
                    "modules": false,
                    "targets": {
                        "chrome": "60"
                    }
                }
            ],
            "@babel/preset-react"
        ],
        "plugins": [
            "lodash",
            "styled-jsx/babel",
            [
                "@babel/plugin-proposal-decorators",
                {
                    "legacy": true
                }
            ],
            [
                "@babel/plugin-proposal-class-properties",
                {
                    "loose": true
                }
            ],
            [
                "@babel/plugin-proposal-object-rest-spread",
                {
                    "loose": true
                }
            ]
        ]
    }
}
