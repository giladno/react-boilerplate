{
    "root": true,
    "globals": {
        "__DEV__": true,
        "_": true,
        "React": true
    },
    "rules": {
        "no-console": 0,
        "strict": 0,
        "no-unused-vars": 1,
        "comma-dangle": [1, "always-multiline"],
        "quotes": [1, "single"],
        "linebreak-style": [2, "unix"],
        "semi": [1, "always"],
        "no-empty": [
            1,
            {
                "allowEmptyCatch": true
            }
        ],
        "max-len": [
            1,
            120,
            4,
            {
                "ignoreUrls": true,
                "ignorePattern": "/(.*)/;",
                "ignoreRegExpLiterals": true
            }
        ],
        "react/prop-types": 0,
        "react/display-name": 0,
        "react/jsx-no-bind": 1,
        "react/no-render-return-value": 0
    },
    "env": {
        "amd": true,
        "es6": true,
        "commonjs": true,
        "browser": true
    },
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        }
    },
    "plugins": ["react"],
    "parser": "babel-eslint"
}
